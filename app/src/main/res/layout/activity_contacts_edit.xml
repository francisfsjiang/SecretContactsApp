<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.never.secretcontacts.ContactsEditActivity">

    <RelativeLayout
        android:id="@+id/contact_name_hold_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contact_edit_name_margin_vertical"
        android:layout_marginBottom="@dimen/contact_edit_name_margin_vertical"
        android:layout_marginStart="@dimen/contact_edit_buttons_margin_horizontal"
        android:layout_marginEnd="@dimen/contact_edit_buttons_margin_horizontal"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18pt"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/change_name_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launch_black_48dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contact_edit_bottons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/contact_new_item_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contact_edit_buttons_margin_horizontal"
            android:layout_marginEnd="@dimen/contact_edit_buttons_margin_horizontal"
            android:layout_weight="1"
            android:text="@string/action_contact_new_item"
            android:textStyle="bold"
            android:theme="@style/ContactActionButton"
            />
        <Button
            android:id="@+id/contact_cancel_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contact_edit_buttons_margin_horizontal"
            android:layout_marginEnd="@dimen/contact_edit_buttons_margin_horizontal"
            android:layout_weight="1"
            android:text="@string/action_contact_cancel"
            android:textStyle="bold"
            android:theme="@style/ContactActionButton"
            />
        <Button
            android:id="@+id/contact_save_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/contact_edit_buttons_margin_horizontal"
            android:layout_marginEnd="@dimen/contact_edit_buttons_margin_horizontal"
            android:layout_weight="1"
            android:text="@string/action_contact_save"
            android:textStyle="bold"
            android:theme="@style/ContactActionButton"
            />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/contact_name_hold_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/contact_edit_bottons_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/item_list_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contact_edit_separate_bar_background"
                android:paddingStart="@dimen/contact_edit_spearate_bar_padding_start"
                android:paddingTop="@dimen/contact_edit_spearate_bar_padding_top"
                android:paddingBottom="@dimen/contact_edit_spearate_bar_padding_bottom"
                android:text="电话号码"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_list_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contact_edit_separate_bar_background"
                android:paddingStart="@dimen/contact_edit_spearate_bar_padding_start"
                android:paddingTop="@dimen/contact_edit_spearate_bar_padding_top"
                android:paddingBottom="@dimen/contact_edit_spearate_bar_padding_bottom"
                android:text="电子邮件"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_list_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contact_edit_separate_bar_background"
                android:paddingStart="@dimen/contact_edit_spearate_bar_padding_start"
                android:paddingTop="@dimen/contact_edit_spearate_bar_padding_top"
                android:paddingBottom="@dimen/contact_edit_spearate_bar_padding_bottom"
                android:text="地址"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_list_memo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contact_edit_separate_bar_background"
                android:paddingStart="@dimen/contact_edit_spearate_bar_padding_start"
                android:paddingTop="@dimen/contact_edit_spearate_bar_padding_top"
                android:paddingBottom="@dimen/contact_edit_spearate_bar_padding_bottom"
                android:text="备忘"/>

        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/contact_edit_buttons_margin_horizontal"
                    android:layout_marginEnd="@dimen/contact_edit_buttons_margin_horizontal"
                    >
                    <Button
                        android:id="@+id/contact_delete_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/action_contact_delete"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:theme="@style/ContactActionButton"
                        />

                    <Button
                        android:id="@+id/contact_block_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:theme="@style/ContactActionButton"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
