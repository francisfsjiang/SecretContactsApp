<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.never.secretcontacts">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_white"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/activity_login_title"></activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/activity_register_title"></activity>
        <activity
            android:name=".ContactsEditActivity"
            android:label="@string/activity_contacts_edit_title" ></activity>
        <activity
            android:name=".KeyActivity"
            android:label="@string/activity_key_title"></activity>
    </application>

</manifest>